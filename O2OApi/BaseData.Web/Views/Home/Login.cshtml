@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <title>Login</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="loginBox row">
            <h2 class="text-center">管理平台登录</h2>
            <form id="from" name="" action="../Home/CheckUser" method="post" class="form-horizontal">
                <div class="form-group">
                    <label for="account" class="col-sm-2 col-md-2 control-label">账号：</label>
                    <div class="col-sm-10 col-md-10">
                        <input type="text" class="form-control" name="account" placeholder="账号 默认：admin" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-2 col-md-2 control-label">密码：</label>
                    <div class="col-sm-10 col-md-10">
                        <input type="password" class="form-control" name="password" placeholder="密码 默认：123456">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-10" style="color: #990033;"></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-10 col-md-10">
                        <button class="btn btn-info" data-loading-text="正在登录..." type="submit">登 录</button>
                        <button class="btn btn-info" type="reset">清 空</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!--.content-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>